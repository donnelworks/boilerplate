{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets": ["./src/assets"],
            "@atom-components": ["./src/components/atoms/index"],
            "@languages": ["./src/languages/index"],
            "@modules": ["./src/modules/index"],
            "@navigations": ["./src/navigations/index"],
            "@screens/*": ["./src/screens/*"],
            "@stores": ["./src/stores/index"],
            "@services/*": ["src/stores/thunks/*"],
            "@reducers/*": ["./src/stores/slices/*"],
            "@themes": ["./src/themes/index"],
            "@utils/*": ["./src/utils/*"],
        }
    },
    "exclude": ["node_modules"]
  }